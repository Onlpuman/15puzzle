{
  "compilerOptions": {
    "target": "es6",
    "jsx": "preserve",
    "module": "es6",
    "rootDir": "src",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ]
}